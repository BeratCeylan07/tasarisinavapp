@{
	Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!--  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"> -->
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/icon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/icon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/icon/favicon-16x16.png">
    <link rel="manifest" href="~/images/icon/site.webmanifest">
    <link rel="mask-icon" href="~/images/icon/safari-pinned-tab.svg" color="#5bbad5">
    <link href="~/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">
    <title>Şenol Hoca Rehberlik - Akademi</title>
    <style>
        td {
            border: 3px solid #000 !important;
        }

        .table-bordered {
            border: 3px solid #000 !important;
        }
    </style>
</head>
<body>
    <div class="container-fluid p-0">
        <div class="row p-0 m-0" style="background: #b5101d;">
            <div class="col-12 text-center" style="color:yellow;"><h1>ŞENOL HOCA REHBERLİK AKADEMİ</h1></div>
            <div class="col-4"><img style="width:350px;" src="~/images/senolhocarehberlik.png" /></div>
            <div class="col-4 text-center" style=" display: flex; flex-direction: column; justify-content: center; /* Dikeyde ortalama */ align-items: center; /* Yatayda ortalama */">
                <h1 style="font-size: 5rem; color:yellow;">@ViewBag.SinavKategori</h1>
            </div>
            <div class="col-4"><img style="width:310px;" src="~/images/akdenizlogo.png" /></div>
            <div class="col-12 text-center" style="color:yellow;"><h1>SINAV GİRİŞ BELGESİ</h1></div>

        </div>
        <div class="row p-0 m-0" style="background: white;">
            <div id="qrcode" style="margin-right: auto; margin-left: auto; margin-top:50px; margin-bottom:50px;"></div>

        </div>
        <div class="row p-0 m-0" style="background: white;">
            <div class="col-12 text-center">
                <div class="row">
                    <div class="col-12">
                        <table class="table table-bordered table-sm">
                            <tr style="background: #b5101d; color:yellow;">
                                <td colspan="2">
                                    <h1>ÖĞRENCİ BİLGİLERİ</h1>
                                </td>
                            </tr>
                            <tr>
                                <td><h1>ADI</h1></td>
                                <td><h1>@ViewBag.OgrAd</h1></td>
                            </tr>
                            <tr>
                                <td><h1>SOYADI</h1></td>
                                <td><h1>@ViewBag.OgrSoyad</h1></td>
                            </tr>
                            <tr style="background: #b5101d; color:yellow;">
                                <td colspan="2">
                                    <h1>SEANS BİLGİLERİ</h1>
                                </td>
                            </tr>
                            <tr>
                                <td><h1>SEANS ADI:</h1></td>
                                <td><h1 class="text-wrap">@ViewBag.SinavAd</h1></td>
                            </tr>
                            <tr>
                                <td><h1>TARİH / SAAT</h1></td>
                                <td><h1>@ViewBag.seansTarih / @ViewBag.seansSaat</h1></td>
                            </tr>
                            <tr>
                                <td><h1>SINAV YERİ</h1></td>
                                <td><h1>@ViewBag.sinavYeri</h1></td>
                            </tr>
                            <tr style="background: #b5101d; color:yellow;">
                                <td colspan="2">
                                    <h1>SINAV KURALLARI</h1>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2"><h4 style="text-align:left !important">Sınav @ViewBag.seansSaat'da başlar</h4></td>
                            </tr>
                            <tr>
                                <td colspan="2"><h4 style="text-align:left !important">İlk 30 dakikadan sonra sınava giriş yapılamaz</h4></td>
                            </tr>
                            <tr>
                                <td colspan="2"><h4 style="text-align:left !important">Sınav geçerliliği açısından optik üzerindeki zorunlu alanların kodlanması gerekmektedir</h4></td>
                            </tr>
                            <tr>
                                <td colspan="2"><h4 style="text-align:left !important">Sınava giriş belgesi salondaki görevliler tarafından toplanacaktır</h4></td>
                            </tr>
                            <tr>
                                <td colspan="2"><h4 style="text-align:left !important">Sınav başlamadan önce telefonlar toplanacaktır</h4></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-6" style="height:150px;">
                        <button id="btnGoSite" class="btn btn-danger w-100 h-100" onclick="goToPage('https://tasariantalya.com/');" style="background: #b5101d; color: yellow;"><i class="fa fa-globe fa-5x"></i></button>
                    </div>
                    <div class="col-6">
                        <button id="btnGoInstagram" class="btn btn-danger w-100 h-100" onclick="goToPage('https://www.instagram.com/tasariantalya?igsh=NGdrdGZlYzZidmxr');" style="background: #b5101d; color: yellow;"><i class="fa fa-instagram fa-5x"></i></button>

                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- <div id="qrcode" style="margin-right: auto; margin-left: auto;"></div> -->
    <script src="~/js/qrCode.js"></script>
    <script type="text/javascript">
	let qrText = "@ViewBag.QRCODE";
	var qrcode = new QRCode(document.getElementById("qrcode"), {
		text: qrText,
		width: 512,
		height: 512,
		colorDark : "#000000",
		colorLight : "#ffffff",
		correctLevel : QRCode.CorrectLevel.H
    });
        function goToPage(url) {
            window.open(url, '_blank');
        }
    </script>
</body>
</html>